        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">User Manage</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">List of users</li>
                    </ol>



                      <div class="card mb-4 ">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            User DataTable 
                        </div>
                        <div class="card-body ">
                            <% if(details!=null) { %>
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                    
                                        <th>Name</th>
                                        <th>E-mail</th>
                                        <th>Mobile</th>
                                        <th>Status</th>
                                        <th>Block/unBlock</th>
                                       
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        
                                        <th>Name</th>
                                        <th>E-mail</th>
                                        <th>Mobile</th>
                                        <th>Status</th>
                                        <th>Block/unBlock</th>
                                        
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% details.forEach((userdata)=>{ %>
                                  <tr>
                                    
                                    
                                    <td><%=userdata.name%></td>
                                    <td><%=userdata.email%></td>
                                    <td><%=userdata.mobile%></td>
                                    <td>
                                        <%if(userdata.status==true){%> 
                                            <p class="text-success">Active</p>
                                            <%} else {%>
                                                <p class="text-danger">Blocked</p>
                                                <%}%>
                    
                                    </td>
                                    <td>
                                        <%if(userdata.status==true){%> 
                                          <a href="/admin/userblock?id=<%=userdata._id%>" onclick="return confirm('Are you sure, change access to <%=userdata.email%>')"><button type="button" class="btn btn-danger" style="width: 100px;">Block</button></a>
                                            <%} else {%>
                                               <a href="/admin/userblock?id=<%=userdata._id%>" onclick="return confirm('Are you sure, change access to <%=userdata.email%>')"><button type="button" class="btn btn-success" style="width: 100px;">Unblock</button></a> 
                                                
                                                <%}%>
                                       
                                    </td>
                                  </tr>
                                  <%})%>
                                </tbody>
                            </table>
                            <%}%>
                        </div>
                    </div>

                    

                </div>
